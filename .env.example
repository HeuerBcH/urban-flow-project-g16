# ===========================
# Banco de Dados (Postgres)
# ===========================
POSTGRES_DB=urbanflow
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Host/porta vistos de fora do Docker (para scripts Python, etc.)
DB_HOST=localhost
DB_PORT=5432

# Opcional: URL completa usada por scripts em Python
# (ajuste se mudar algum valor acima)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/urbanflow

# ===========================
# Grafana Cloud / PDC Agent
# ===========================
# URL do seu stack no Grafana Cloud
GRAFANA_HOST=https://SEU_SUBDOMINIO.grafana.net

# Token do PDC Agent (NÃO commitar o valor real, só no .env)
GRAFANA_PDC_TOKEN=SEU_TOKEN

# Cluster do Grafana Cloud (ex: prod-sa-east-1)
GRAFANA_PDC_CLUSTER=prod-sa-east-1

# ID do Hosted Grafana (stack ID)
GRAFANA_PDC_ID=SEU_GRAFANA_ID
